# BrainSAIT OCR Environment Variables

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here

# Payment Gateway Keys (Saudi Arabia)
MOYASAR_API_KEY=your_moyasar_api_key
MOYASAR_SECRET_KEY=your_moyasar_secret_key
TAP_API_KEY=your_tap_api_key
STCPAY_MERCHANT_ID=your_stcpay_merchant_id

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Database Configuration (will be set by Cloudflare)
DATABASE_ID=your_d1_database_id
KV_NAMESPACE_ID=your_kv_namespace_id
R2_BUCKET_NAME=brainsait-ocr-storage

# Application Settings
APP_URL=https://brainsait-ocr.pages.dev
API_URL=https://brainsait-ocr-worker.your-domain.workers.dev

# Development Settings
NODE_ENV=development
LOG_LEVEL=info