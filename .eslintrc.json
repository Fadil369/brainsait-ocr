{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "prefer-template": "error"
  },
  "overrides": [
    {
      "files": ["src/routes/*.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["public/app/*.js"],
      "env": {
        "browser": true
      },
      "globals": {
        "BrainSAITApp": "readonly"
      }
    }
  ]
}