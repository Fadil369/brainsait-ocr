{
  "name": "brainsait-ocr",
  "version": "1.0.1",
  "description": "BrainSAIT OCR - Advanced Multilingual Document Reader",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev ./public --port 3000",
    "build": "node scripts/build.js",
    "deploy": "wrangler pages deploy ./public --project-name=brainsait-ocr",
    "worker:dev": "wrangler dev src/worker.js",
    "worker:deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute brainsait-ocr-db --file=./schema.sql",
    "test": "jest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.0",
    "hono": "^4.6.5",
    "jose": "^5.1.0",
    "stripe": "^14.0.0",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "wrangler": "^4.30.0",
    "@cloudflare/workers-types": "^4.0.0",
    "prettier": "^3.1.0",
    "jest": "^29.0.0",
    "miniflare": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}