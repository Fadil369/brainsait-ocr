# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 88

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript, TypeScript, JSON, HTML, CSS
[*.{js,ts,json,html,css,scss}]
indent_size = 2
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files (don't trim trailing whitespace as it can be significant)
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Dockerfile
[Dockerfile*]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.{ini,cfg,toml}]
indent_size = 4

# Package files
[package.json]
indent_size = 2

# Requirements files
[requirements*.txt]
max_line_length = 120

# Environment files
[.env*]
insert_final_newline = false